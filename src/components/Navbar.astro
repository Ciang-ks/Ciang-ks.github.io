<nav class="navbar">
  <div class="nav-container">
    <a href="/" class="nav-logo">Ciang-ks</a>
    <div class="nav-links">
      <a href="/" class="nav-item">Home</a>
      <a href="/posts" class="nav-item">Archive</a>
      <a href="/#contact" class="nav-item">Contact</a>
      <button
        id="darkModeToggle"
        class="dark-mode-toggle"
        aria-label="Toggle dark mode"
      >
        <i class="fas fa-moon"></i>
        <i class="fas fa-sun"></i>
      </button>
    </div>
  </div>
</nav>

<script>
  // Dark mode toggle logic
  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("dark-mode");

    const isDark = element.classList.contains("dark-mode");
    localStorage.setItem("theme", isDark ? "dark" : "light");

    updateToggleIcon();
  };

  const updateToggleIcon = () => {
    const toggle = document.getElementById("darkModeToggle");
    if (toggle) {
      const isDark = document.documentElement.classList.contains("dark-mode");
      if (isDark) {
        toggle.classList.add("active");
      } else {
        toggle.classList.remove("active");
      }
    }
  };

  // Setup event listener
  document.addEventListener("astro:page-load", () => {
    const toggle = document.getElementById("darkModeToggle");
    if (toggle) {
      toggle.addEventListener("click", handleToggleClick);
      updateToggleIcon();
    }
  });
</script>

<style>
  /* 导航栏 */
  .navbar {
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: 1px solid var(--border-color);
    transition: background-color 0.3s ease;
  }

  :global(.dark-mode) .navbar {
    background-color: rgba(26, 28, 32, 0.8);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1100px;
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .nav-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-main);
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-item {
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 0.95rem;
    position: relative;
  }

  .nav-item:hover {
    color: var(--text-main);
  }

  /* Dark Mode Toggle */
  .dark-mode-toggle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid var(--border-color);
    background-color: transparent;
    color: var(--text-main);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition-fast);
  }

  .dark-mode-toggle:hover {
    background-color: var(--bg-alt);
    transform: rotate(15deg);
  }

  .dark-mode-toggle :global(.fa-sun) {
    display: none;
  }
  .dark-mode-toggle :global(.fa-moon) {
    display: block;
  }
  .dark-mode-toggle.active :global(.fa-sun) {
    display: block;
  }
  .dark-mode-toggle.active :global(.fa-moon) {
    display: none;
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-links {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
      width: 100%;
    }

    .nav-item {
      font-size: 0.9rem;
    }
  }
</style>
